<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:key="enabled"
        android:title="Enabled"
        android:defaultValue="true" />

    <PreferenceCategory
        android:dependency="enabled"
        android:title="Location">

        <com.tokko.cameandwent.cameandwent.LocationPreference
            android:dependency="enabled"
            android:title="Set location"
            android:summary="Sets the current location as origin"
            android:key="origin" />

        <EditTextPreference
            android:dependency="enabled"
            android:title="Radius"
            android:defaultValue="100"
            android:key="radius"
            android:inputType="number" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="Breaks"
        android:key="breaks"
        android:dependency="enabled">

        <com.tokko.cameandwent.cameandwent.TimePreference
            android:key="average_break"
            android:title="Average daily break"
            android:dependency="breaks" />
    </PreferenceCategory>

    <PreferenceCategory
        android:dependency="enabled"
        android:title="Audio"
        android:key="audio"
        android:defaultValue="true" >
        
        <SwitchPreference
            android:defaultValue="true"
            android:title="Sound mode"
            android:dependency="audio"
            android:summaryOff="Sound mode will be unaltered"
            android:summaryOn="Sound mode mode will be altered"
            android:key="soundmode" />

        <SwitchPreference
            android:dependency="soundmode"
            android:title="Silent"
            android:defaultValue="true"
            android:key="silent"
            android:summaryOn="Device will be silent at work"
            android:summaryOff="Device will not be silent at work"/>
        <SwitchPreference
            android:dependency="silent"
            android:key="vibrate"
            android:title="Vibrate"
            android:summaryOn="Device will vibrate at work"
            android:summaryOff="Device will not vibrate at work"
            android:defaultValue="true" />

    </PreferenceCategory>

    <PreferenceCategory
        android:dependency="enabled"
        android:defaultValue="true"
        android:enabled="false"
        android:title="Reminder">


        <SwitchPreference
            android:defaultValue="true"
            android:title="Reminder"
            android:summaryOff="Reminders are disabled"
            android:summaryOn="Reminders are enabled"
            android:key="reminders"/>

        <com.tokko.cameandwent.cameandwent.TimePreference
            android:key="reminder_time"
            android:dependency="reminders"
            android:title="Reminder time"/>

        <ListPreference
            android:defaultValue="0"
            android:key="reminder_day"
            android:entries="@array/weekdays"
            android:entryValues="@array/weekday_numbers"
            android:dependency="reminders"
            android:title="Reminder day"/>

        <SwitchPreference
            android:defaultValue="true"
            android:title="Vibrate"
            android:key="vibrate"
            android:dependency="reminders" />

        </PreferenceCategory>

</PreferenceScreen>
